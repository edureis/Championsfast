<!DOCTYPE html>
<html>

  <head>
    <title>Champions Fast</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <div class="container bloco-competicao text-center">
      <h1>Campeonatos em andamento</h1>
      <% @competicao.each do |competicao| %>
        <%= link_to :action => 'show', :id => competicao do  %>
          <div class="competicao-item col-lg-3 col-md-3">
            <span><%= competicao.competicao_tipo.nome %></span></br>
            <span><%= competicao.nome %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  </body>

</html>
